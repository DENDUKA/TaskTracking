@model TaskTrackingSystem.Models.ProjectModel

@using TaskTrackingSystem.CustomAuthorizeAttribute;
@{ControllerAccessAttribute.FillFromPage(Model.ProjectTypeId);}


@{
    ViewBag.Title = "Edit";
}

<div class="alertHeader"></div>

<div class="item-header">
    <h2>Перенос в другую категорию прокта : @Model.Name</h2>
</div>

<div id="main-content" class="main-content">
    <div class="active-area">
        <div class="column full">
            <div class="content">
                <div class="command-bar">
                    <div class="ops-cont">
                        <div class="ops-menus">
                            <ul id="opsbar-edit" class="first ops">
                                <li class="last">
                                    <a class="issueaction-edit-issue button edit first last" href="~/Project/Index/@Model.Id">
                                        <span>Назад</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <hr />
                    @using (Html.BeginForm())
                    {
                        @Html.Hidden("ProjectId", Model.Id);

                        <div class="mod-content">
                            <div class="field-group">
                                @Html.LabelFor(model => model.ProjectTypeId, htmlAttributes: new { @class = "" })
                                @Html.DropDownListFor(model => model.ProjectTypeId, Model.DropDownListProjectType, new { @class = "inputitem" })
                                <div>
                                    @Html.ValidationMessageFor(model => model.ProjectTypeId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="command-bar">
                            <div class="ops-cont">
                                <div class="ops-menus">
                                    <ul id="opsbar-edit" class="first ops">
                                        <li class="last">
                                            <input type="submit" value="Сохранить" class="issueaction-edit-issue button edit first last" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>